									<option value="HTML5 / CSS3">HTML5 / CSS3</option>
									<option value="Graphic Design">Graphic Design</option>
								</select>
							</div>*@

							<div class="clear"></div>

							<div class="col_full">
								<label for="template-contactform-message">Message <small>*</small></label>
								@Html.TextAreaFor(model => model.Message, new { required = "required", @class = "required sm-form-control", @maxlength = "2000",rows="6", cols="30" })
							</div>

							<div class="col_full hidden">
								<input type="text" id="template-contactform-botcheck" name="template-contactform-botcheck" value="" class="sm-form-control" />
							</div>

							<div class="col_full">
								<button name="submit" type="submit" id="submit-button" tabindex="5" value="Submit" class="button button-3d nomargin">Submit Comment</button>
							</div>

						</form>

                        <script type="text/javascript">


                            $(document).ready(function () {


                                $("body").on("click", "#btnsave", function (evt) {
                                    var frmVlalidation = $("#template-contactform").valid();


                                    if (frmVlalidation == true) {

                                        $.ajax({
                                            url: '@Url.Action("SaveContact", "Home")',
                                            data: $('#template-contactform').serialize(),
                                            cache: false,
                                            type: "POST",
                                            dataType: "html",
                                            success: function (data, textStatus, XMLHttpRequest) {
                                                if (data.Data == "Success") {
                                                    alert('Thanks for your Interest in LandsDepartment, Our Representative Will Contact You');
                                                }
                                                else {
                                                    alert('Error Occurred Please try again');
                                                }
                                            }
                                        });
                                    }
                                    return false;
                                });




                            });

                            $('#template-contactform-nophone').parent().hide();

						</script>

