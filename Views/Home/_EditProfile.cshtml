 @model LandsDepartment.Models.aspnet_Membership

 <section id="content" style="margin-bottom: 0px;">

            <div class="content-wrap">


                <div class="container clearfix">

						<div class="fancy-title title-double-border">
						<h1>Edit Profile</h1>
					    </div>
                    
                    <form id="frmEditProfile" class="nobottommargin" action="#">

                     @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.UserId)
							<div class="col_half">
								<label for="register-form-name">Name:</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
								@*<input type="text" id="register-form-name" name="register-form-name" value="" class="form-control" placeholder="John Doe">*@
							</div>

							<div class="col_half col_last">
								<label for="register-form-email">Email Address:</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "disabled" })
								@*<input type="text" id="register-form-email" name="register-form-email" value="" class="form-control" placeholder="admin@landsdepartment.ca">*@
							</div>

							<div class="clear"></div>

							@*<div class="col_half">
								<label for="register-form-username">Username:</label>
								<input type="text" id="register-form-username" name="register-form-username" value="" class="form-control" placeholder="john123">
							</div>*@

							<div class="col_half">
								<label for="register-form-phone">Phone:</label>
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required", placeholder = "333 333-3333" })
								@*<input type="text" id="register-form-phone" name="register-form-phone" value="" class="form-control" placeholder="333 333-3333">*@
							</div>

							<div class="clear"></div>


							<div class="col_full nobottommargin">
                            <input type="button" id="btnEditProfileSubmit" value="Update" class="button button-3d button-black nomargin" />
								@*<button class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" value="register">Update</button>*@
							</div>

						</form>
                    
                </div>
      
                
                
    </div>
            <!-- #wrapper end -->

            
            
        </section>    