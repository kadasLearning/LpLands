@model LandsDepartment.Models.LocalPasswordModel
 <section id="content" style="margin-bottom: 0px;">

            <div class="content-wrap">


                <div class="container clearfix">

						<div class="fancy-title title-double-border">
						<h1>Change your password</h1>
					    </div>
                    
                    <form id="frmChangeUserPassword"  class="nobottommargin">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.UserName)

							<div class="col_half">
								<label for="register-form-password">New Password:</label>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New Password" })
							</div>

							<div class="col_half col_last">
								<label for="register-form-repassword">Re-enter New Password:</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
							</div>

                        <div class="clear"></div>
                       
							<div class="col_full nobottommargin">
                            <input type="button" id="frmChangeUserPasswordSubmit" value="Save" class="button button-3d button-black" />
							</div>
                        
                        
						</form>

                        
                </div>
      
                
                
    </div>
            <!-- #wrapper end -->

            
            
        </section>  